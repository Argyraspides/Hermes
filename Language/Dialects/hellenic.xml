<?xml version="1.0"?>
<hellenic>
    <version>2</version>
    <dialect>1</dialect>
    <messages>
        <message id="0" name="LATITUDE_LONGITUDE">
            <description>The position of the object expressed in latitude, longitude, and altitude,
                supporting high-precision planetary and space navigation.
            </description>
            <field type="float64" name="lat" units="degrees">Latitude (WGS84 or planetary model)</field>
            <field type="float64" name="lon" units="degrees">Longitude (WGS84 or planetary model)</field>
            <field type="uint64_t" name="time_usec" units="μs">Timestamp (microseconds since epoch)</field>
            <field type="uint8_t" name="reference_frame">Reference frame (0 = Mercury, 1 = Venus, 2 = Earth, 3 = Moon, 4
                = Mars ...)
            </field>
        </message>

        <message id="1" name="ALTITUDE">
            <description>The altitude of the object with high precision, applicable to both planetary
                and deep-space operations.
            </description>
            <field type="float64" name="alt" units="m">Altitude (Mean Sea Level or reference frame)</field>
            <field type="float64" name="relative_alt" units="m">Altitude relative to home/base</field>
            <field type="uint64_t" name="time_usec" units="μs">Timestamp (microseconds since epoch)</field>
        </message>

        <message id="2" name="GROUND_VELOCITY">
            <description>
                The velocity components of the object
            </description>
            <field type="float64" name="vx" units="m/s">Velocity X (Latitude direction, positive north)</field>
            <field type="float64" name="vy" units="m/s">Velocity Y (Longitude direction, positive east)</field>
            <field type="float64" name="vz" units="m/s">Velocity Z (Altitude direction, positive up)</field>
            <field type="uint64_t" name="time_usec" units="μs">Timestamp (microseconds since epoch)</field>
        </message>
    </messages>
</hellenic>
